@model ScannerCC.Models.Usuario

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-color: #242424;
        color: white;
    }
    
    .container {
        text-align: center;
    }

    .form-group {
        margin-bottom: 15px; 
    }

    input, select {
        width: 100%;
        margin: 5px;
    }
        
    input[type="submit"] {
        background-color: #20777A; 
        color: white;
    }

    .btn-dark:hover {
        background-color: #62EBF0; 
        border-color: #20777A; 
        color: black; 
    }

    a {
        color: white; 
    }

    a:hover {
        color: #62EBF0;
    }
</style>

<h1>Crear</h1>

<h4>Usuario</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create" asp-controller="Auth" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nombre" class="control-label"></label>
                        <input asp-for="Nombre" name="Nombre" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Rut" class="control-label"></label>
                        <input asp-for="Rut" name="Rut" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" name="Email" class="form-control" />
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label for="Rol">Rol:</label>

                        <select name="Rol" id="Rol">
                            <option value="Especialista">Especialista</option>

                            <option value="Administrador">Adminstrador</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Contraseña</label>
                        <input name="Password" name="Password" class="form-control" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-dark" />
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="Home">Volver a la lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
